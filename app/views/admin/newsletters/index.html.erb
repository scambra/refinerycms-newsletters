<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
  <% end %>
  <% if @newsletters.any? %>
    <div class='pagination_container'>
      <%= render :partial => 'newsletters' %>
    </div>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'shared.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <% if Admin::NewslettersController.searchable? %>
      <li>
        <%= render :partial => "/shared/admin/search",
                    :locals => {
                      :url => admin_newsletters_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), new_admin_newsletter_url,
                   :class => "add_icon" %>
    </li>
  <% if !searching? and Admin::NewslettersController.sortable? and Newsletter.count > 1 %>
    <li>
      <%= link_to t('.reorder', :what => "Newsletters"),
                   admin_newsletters_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Newsletters"),
                   admin_newsletters_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>

  <p>
    <%= t('.subscribed', :count => User.suscribed.count) %>
    <%= User.suscripted.count %> users subscribed to newsletters
    <br />
    <%= t('.unsubscribed', :count => Newsletter.sum(:unsubscribed)) %>
  </p>

</div>
<%= render :partial => "/shared/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Admin::NewslettersController.sortable? and Newsletter.count > 1 %>
