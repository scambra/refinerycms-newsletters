<%= form_for [:admin, @newsletter], :url => send_admin_newsletter_path(@newsletter), :html => {:method => :post} do |f| -%>
  <%= content_tag :p, @newsletter.sending? ? t('.newsletter_is_sending') : '&nbsp;'.html_safe %>
  
  <div class='field'>
    <span class="label_with_help">
      <%= t('.email') -%>
      <%= refinery_help_tag t('.email_help') %>
    </span>
    <%= text_field_tag :email, params[:email], :class => 'larger widest' -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :hide_delete => true,
                :submit_button_text => t('.send')
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
